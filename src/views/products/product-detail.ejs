<!DOCTYPE html>
<html lang="ES">

<%- include('../partials/head',{
	title : 'Detalle'
}) %>


<body class="detail">
	
	<main class="d-flex flex-column justify-content-between" style="height: 100vh;">
		<%- include('../partials/header') %>

		<section class="row">
		<div class="col-12 col-md-10 mx-auto">
			<div class="card" style="background-color: rgba(255, 255, 255, 0.5);">
				<div class="card-body d-flex flex-column flex-md-row gap-4 flex-wrap">
					<div class="w-100">
						<img src="/images/<%= image || 'default.png' %>" alt="" class="w-100">
					</div>
					<div>
						<div class="d-flex justify-content-between align-items-center">
							<h3><%= name %></h3>

							<h3 class="badge text-bg-<%= categoryId == 1 ? "success" : categoryId == 2 ? "danger" : "primary" %>"><%= category.name %></h3>
						</div>
						
						<hr>
						<h5><a href="" data-bs-toggle="modal" data-bs-target="#modalMap" class="text-secondary"><i class="fa-solid fa-map-location-dot"></i></a> <%= address.street %> <%= address.city %>, <%= address.province %></h5>
						<p><%= description %></p>
						<ul class="list-group list-group-flush ">
							<li class="list-group-item bg-transparent">Precio del cubierto: <b> $<%= coverPrice %></b></li>
							<li class="list-group-item bg-transparent">Capacidad <b> <%= capacity %></b></li>

							<% if (locals.userLogin) { %>
								<li class="list-group-item bg-transparent">Lugares disponibles: <b><%= availability %></b></li>
								<li class="list-group-item bg-transparent">Tel√©fono: <b><%= phone %></b></li>
								<li class="list-group-item bg-transparent">Email <b> <%= email %></b></li>
							<% } %>
							
							
						  </ul>
						  <div class="d-flex justify-content-end">
							<button class="btn btn-dark">Reservar</button>

						  </div>
					</div>
					<%- include('../partials/modal-show-map-detail',{
						url_map,
					}) %>
				</div>
				
			</div>
		</div>
	</section>
	<%- include('../partials/footer') %>

	</main>


</body>
</html>